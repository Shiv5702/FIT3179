{
  "data": {
    "url": "https://raw.githubusercontent.com/Shiv5702/FIT3179/main/Assignment2/data/ufo_hours.csv"
  },
  "transform": [
    {
      "calculate": "datum.Hour === 0 ? '12' : (datum.Hour > 12 ? toString(datum.Hour - 12) : toString(datum.Hour))",
      "as": "hour_text"
    },
    {
      "calculate": "datum.Hour === 0 ? 'pm' : (datum.Hour < 12 ? 'am' : 'pm')",
      "as": "ampm"
    },
    {
      "calculate": "datum.hour_text + datum.ampm",
      "as": "hour12"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "hour12",
      "type": "nominal",  
      "scale": {"type": "band"},  
      "axis": {"labelAngle": 0} 
    },
    "y": {
      "field": "Sightings",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "hour12", "type": "nominal", "title": "Hour (12-hour format)"},
      {"field": "Sightings", "type": "quantitative", "title": "Sightings"}
    ]
  }
}
