{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 500,
  "width": 500,
  "title": "COVID-19 Cases per Country (13 Oct 2020)",
  "data": {
    "url": "interactive_scatter_plot/data/COVID_19_10_Oct_2020.csv"
  },
    "params": [
    {
      "name": "Population_Above",

      "value": 0,
      "bind": {"input": "range", "min": 0, "max": 100000, "step": 100000}
    }
  ],
  "selection": {
    "continent_selection": {
      "type": "multi", "fields": ["Continent"], "bind": "legend"
    }
  },
  "transform":[
    {"filter": "datum.Expenditure > 0"},
    {"filter": "datum.Sightings > 0"},
    {"filter": "datum.Investigated > 0"},
    {"filter": "datum.Population > Population_Above"}
  ],
  "mark": "point",
  "encoding": {
    "x": {
      "field": "Sightings",
      "type": "quantitative",
      "title":"UFO Sightings",
      "axis": {"tickCount": 5},
      "scale": {"type": "log",  "domain":[1, 100000]}
    },
    "y": {
      "field": "Investigated",
      "type": "quantitative",
      "axis": { "tickCount": 2},
      "scale": {"type": "log", "domain":[1, 100]}
    },
    "size": {"field": "Population", "type": "quantitative",  "scale": {"range": [30, 500]}
},
    "fill": {"field": "Continent",  "type": "nominal","scale": {"domain":["North America", "South America", "Europe", "Africa", "Asia", "Oceania"], "range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]}},
    "color": {"field": "Continent", "type": "nominal","scale": {"domain":["North America", "South America", "Europe", "Africa", "Asia", "Oceania"],"range": ["#e41a1c", "#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]}
    },
    "opacity": {
      "condition": {"selection": "continent_selection", "value": 0.8},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Expenditure", "type": "quantitative", "format": ","},
      {"field": "Sightings", "type": "quantitative", "format": ","},
      {"field": "Investigated", "type": "quantitative", "format": ","}
    ]

  }
}
